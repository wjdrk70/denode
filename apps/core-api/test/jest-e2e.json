{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../../../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@api/(.*)$": "<rootDir>/apps/core-api/src/$1",
    "^@app/storage(|/.*)$": "<rootDir>/libs/storage/src/$1",
    "^@app/core-enum(|/.*)$": "<rootDir>/libs/core-enum/src/$1",
    "^@app/user(|/.*)$": "<rootDir>/libs/user/src/$1",
    "^@app/product(|/.*)$": "<rootDir>/libs/product/src/$1",
    "^@app/auth(|/.*)$": "<rootDir>/libs/auth/src/$1",
    "^@app/inventory(|/.*)$": "<rootDir>/libs/inventory/src/$1",
    "^@app/transaction(|/.*)$": "<rootDir>/libs/transaction/src/$1"
  }
}
